# .env.example
# Edit this file to change application behaviour
# After editing, restart: docker compose restart alerts

# ============================================================================
# Connection Settings
# ============================================================================

# When no SSH Tunnel needed, choose false
USE_SSH_TUNNEL=false
SSH_HOST=XX.XXX.XXX.XXX
SSH_PORT=22
SSH_USER=XXXXXX
SSH_KEY_PATH=/app/ssh_ubuntu_key

# Database Connection
DB_HOST=XXXXXX
DB_PORT=5432
DB_NAME=XXXXX
DB_USER=XXXXX
DB_PASS=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# SMTP Config
SMTP_HOST=XX.XXX.XXX.XX
SMTP_PORT=465
SMTP_USER=user@email.com
SMTP_PASS=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# ============================================================================
# User permissions
# ============================================================================
# determine from echo UID=$(id -u) and echo GID=$(id -g)
UID=1000
GID=1000

# ============================================================================
# Notification Settings
# ============================================================================
ENABLE_EMAIL_ALERTS=true
ENABLE_TEAMS_ALERTS=false
ENABLE_SPECIAL_TEAMS_EMAIL_ALERT=false

# ============================================================================
# Query Parameters
# ============================================================================
SQL_QUERY_FILE=filename1.sql
SQL_TYPE_AND_STATUS_FILE=filename2.sql
EVENT_TYPE_ID=18
EVENT_STATUS_ID=3
EVENT_NAME_FILTER=hot
EVENT_EXCLUDE=vessel
EVENT_LOOKBACK_DAYS=4

# ============================================================================
# Scheduler Settings
# ============================================================================
# Check frequency in hours (floats allowed)
SCHEDULE_FREQUENCY=1

# Days before sending reminder about same event
REMINDER_FREQUENCY_DAYS=3

# ============================================================================
# Notification Recipients (comma-separated emails)
# ============================================================================
INTERNAL_RECIPIENTS=user@email.com
PROMINENCE_EMAIL_RECIPIENTS=user2@email.com
SEATRADERS_EMAIL_RECIPIENTS=user3@email.com

# Special Teams email
SPECIAL_TEAMS_EMAIL=channel@emea.teams.ms

# ============================================================================
# URLs
# ============================================================================
EVENTS_BASE_URL=https://prominence.orca.tools/events

# ============================================================================
# Logging
# ============================================================================
LOG_FILE=events_alerts.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# ============================================================================
# Docker Environment Indicator
# ============================================================================
DOCKER_ENV=true

# ============================================================================
# Stylistic Choices
# ============================================================================
COMPANY_NAME=Prominence Maritime S.A.
COMPANY_LOGO=trans_logo_prominence_procreate_small.png
ST_COMPANY_LOGO=trans_logo_seatraders_procreate_small.png

# Color Conventions
LIGHT_BLUE_PROMINENCE=#2EA9DE
DARK_BLUE_PROMINENCE=#1A2440
DARK_BLUE_WINGU=#0B4877

